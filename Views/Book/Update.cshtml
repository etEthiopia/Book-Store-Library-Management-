@model BookEditViewModel

<div class="row orderForm">
    <form asp-controller="Book" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update book</h3>
        @Html.HiddenFor(m => Model.Book.BookId)
        <div class="form-group">
            <label asp-for="Book.Author" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.Book.AuthorId,
                                        new SelectList(Model.Authors.Select(x => new { Value = x.AuthorId, Text = x.Name}), "Value", "Text"),
                                        htmlAttributes: new { @class = "form-control border-input" } )
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Book.Title" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Book.Title" class="form-control" placeholder="Enter Book Title" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Book.Year" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Book.Year" type="number" maxlength="4" size="4" class="form-control" placeholder="Enter Publication Year" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Book.Category" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Book.Category" type="text" class="form-control" placeholder="Enter Category" />
                <span asp-validation-for="Book.Category" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Book.Cover" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Book.Cover" type="text" class="form-control" placeholder="Enter Book Cover" />
                <span asp-validation-for="Book.Cover" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-danger" type="submit" value="Remove" asp-controller="Book" asp-action="Remove" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>


